<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:text="Ressource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textColor="@android:color/holo_orange_dark"
        android:textAlignment="center"
        android:textSize="24sp"
        android:background="@android:color/black" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@android:color/black">

        <TextView
            android:text="Gas :"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_weight="0.95"
            android:textColor="@android:color/white"
            android:textColorHighlight="@android:color/white" />

        <TextView
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:id="@+id/gas"
            android:layout_weight="0.01"
            android:textColor="@android:color/white"
            android:textColorHighlight="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@android:color/black">

        <TextView
            android:text="GasModifier:"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_weight="0.36"
            android:layout_width="130dp"
            android:textColorHighlight="@android:color/white"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:id="@+id/gasModifier"
            android:textColorHighlight="@android:color/white"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black">

        <TextView
            android:text="Minerals:"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_width="130dp"
            android:textColorHighlight="@android:color/white"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/minerals"
            android:textColorHighlight="@android:color/white"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black">

        <TextView
            android:text="MineralsModifier:"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:layout_weight="0.08"
            android:textColorHighlight="@android:color/white"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mineralsModifier"
            android:layout_weight="0.87"
            android:textColorHighlight="@android:color/white"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_weight="0.98"
        android:background="@android:color/black">

        <fragment
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:name="com.example.pellesam.outerspacemanager.Fragment.FragmentReport"
            android:id="@+id/fragmentReport" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blank"
            android:layout_weight="0.13"
            android:background="@android:color/black" />

        <fragment
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.24"
            android:name="com.example.pellesam.outerspacemanager.Fragment.FragmentReportDetails"
            android:id="@+id/fragmentReportDetails" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@android:color/black">

        <Button
            android:text="Rapport d'attaque"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/attackReport" />
    </LinearLayout>

</LinearLayout>