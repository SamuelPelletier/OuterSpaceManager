<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pellesam.outerspacemanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.pellesam.outerspacemanager.MainActivity.SignUpActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pellesam.outerspacemanager.MainActivity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.pellesam.outerspacemanager.MainActivity.BuildingActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.pellesam.outerspacemanager.MainActivity.GeneralActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.pellesam.outerspacemanager.MainActivity.GalaxyActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.pellesam.outerspacemanager.MainActivity.SearchActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.pellesam.outerspacemanager.MainActivity.ShipActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.pellesam.outerspacemanager.MainActivity.FleetActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.pellesam.outerspacemanager.MainActivity.AttackActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.pellesam.outerspacemanager.MainActivity.ReportAttackActivity"
            android:label="@string/app_name" >
        </activity>

    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>
